@using InventorySystem.Models.DataEntities
@model Item;

@{
    ViewData["Title"] = "Edit Details";
    //bool isCreationContext = ViewData["IsCreationContext"] is bool value && value;
    //var isCreationContext = ViewData["IsCreationContext"] != null && (bool)ViewData["IsCreationContext"];
    Layout = null;
}

<script>
    $(document).ready(function () {

        getStatuses();
        getOptions();

    });

    $(document).on('hidden.bs.modal', '.container #dynamic-modal', function (e) {
         $(this).remove();
    });
</script>

<h5><strong>Modify Details</strong></h5>
<hr />
<form asp-action="update" class="forms" asp-route-id="@Model.ItemId" onsubmit="return UpdateRe;">
    <!--div asp-validation-summary="ModelOnly" class="text-danger"></!--div-->
    <input type="hidden" asp-for="ItemId" />
    <div class="form-group">
        <label asp-for="ItemCode" class="control-label"></label>
        <input asp-for="ItemCode" type="text" class="form-control user-input" autocomplete="off" pattern="\S+"
               name="itemcode" id="itemcode" />
        <span asp-validation-for="ItemCode" id="itemcode-error" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <label asp-for="ItemName" class="control-label"></label>
        <input asp-for="ItemName" type="text" class="form-control user-input" autocomplete="off"
               name="itemname" id="itemname" />
        <span asp-validation-for="ItemName" id="itemname-error" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <label asp-for="ItemDescription" class="control-label"></label>
        <input asp-for="ItemDescription" type="text" class="form-control user-input" autocomplete="off"
               name="itemdesc" id="itemdesc" />
        <span asp-validation-for="ItemDescription" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <label asp-for="Status" class="control-label"></label>
        <select asp-for="Status" id="statusDropdown" class="form-control" required name="itemstatus" itemid="itemstatus">
            <option value="" class="text-muted">--Select Status--</option>
        </select>

        <span asp-validation-for="Status" id="status-errror" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <label asp-for="FirmwareUpdated" class="control-label"></label>
        <select asp-for="FirmwareUpdated" id="updateDropdown" class="form-control" required name="itemfirmware" id="itemfirmware">
            <option value="" class="text-muted">--Select Option--</option>
        </select>

        <span asp-validation-for="FirmwareUpdated" id="firmwareupdated-error" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <input type="submit" value="Save Changes" class="btn btn-primary form-control" />
        <input type="button" value="Cancel" class="btn btn-outline-secondary form-control mt-3 close-modalBtn" data-bs-dismiss="modal" />
    </div>
</form>

