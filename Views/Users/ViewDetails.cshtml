@model InventorySystem.Models.User
<!--model IEnumerable<InventorySystem.Models.User-->
@{
    ViewData["Title"] = "User Details";
    Layout = null;
}

<div class="">
    <h5><strong>User Details</strong></h5>
    <hr />
    <div class="row">
        <dl>
            
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Username)
            </dt>
            <dd class="col-sm-10 text-break">
                @Html.DisplayFor(model => model.Username)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-10 text-break">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Password)
            </dt>
            <dd class="col-sm-10 text-break">
                @Html.DisplayFor(model => model.Password)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DateCreated)
            </dt>
            <dd class="col-sm-10 text-break">
                @Html.DisplayFor(model => model.DateCreated)
            </dd>
        </dl>

    </div>
   
</div>
<div class="form-group m-0">
    <a onclick="ShowPopUp('@Url.Action("Update", "Users",  new{id = Model.UserId}, Context.Request.Scheme)','Update Details')" class="btn btn-success form-control">Update Details</a>
    <input type="button" value="Cancel" class="btn btn-outline-secondary form-control mt-3 close-modalBtn" data-bs-dismiss="modal" />
</div>
