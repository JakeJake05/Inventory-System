@using InventorySystem.Models.DataEntities
@model Item
@{
    ViewData["Title"] = "Add Item";
    Layout = null;
}

<script>
    var itemid = '@Html.Raw(Model.ItemId)';
    $(document).ready(function () {
        getStatuses();
        getOptions();
    });
</script>

<h5 class="text-break"><strong>Add new item</strong></h5>
<hr />
<form asp-controller="ValidateApi" asp-action="AddItem"  id="add-item" method="post" class="forms" onsubmit="return AddRequest(this);">

    <div class="form-group" style="font-size: 0.9rem;">
        <label asp-for="ItemCode" for="itemCode" class="control-label"></label>
        <input asp-for="ItemCode" id="itemCode" type="text" class="form-control form-control-sm w-50 user-input" name="itemCode"
               autocomplete="off"
               required
               placeholder="Item Code"
               data-val="true"
               data-val-required="Item code is required!"
               data-val-minlength="Item code must be at least 3 characters long."
               data-val-minlength-min="3"
               maxlength="20"
               pattern="\S+" onkeydown="if(['Space'].includes(arguments[0].code)){return false;}" />

        <span asp-validation-for="ItemCode" id="itemCode-error" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <label asp-for="ItemName" for="itemName" class="control-label"></label>
        <input asp-for="ItemName" id="itemName" class="form-control form-control-sm w-50  user-input" name="itemName"
               autocomplete="off"
               required
               placeholder="Item Name"
               data-val="true"
               data-val-required="Item name is required!"
               data-val-minlength="Item name must be at least 3 characters long." 
               maxlength="20" />
        <span asp-validation-for="ItemName" id="itemName-error" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <label asp-for="ItemDescription" for="itemDescription" class="control-label"></label>
        <textarea asp-for="ItemDescription" id="itemDescription" type="text" class="form-control form-control-sm w-50  user-input" name="itemDescription"
                  autocomplete="off"
                  placeholder="Description"></textarea>
        <span asp-validation-for="ItemDescription" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <label asp-for="Status" for="statusDropdown" class="control-label"></label>
        <select asp-for="Status" id="statusDropdown" class="form-control form-control-sm w-50 " required name="statusDropdown">
            <option id="statusvalue" value="" class="text-muted">--Select Status--</option>
        </select>

        <span asp-validation-for="Status" id="statusDropdown-error" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <label asp-for="FirmwareUpdated" for="updateDropdown" class="control-label"></label>
        <select asp-for="FirmwareUpdated" id="updateDropdown" class="form-control form-control-sm w-50 " required name="updateDropdown">
            <option id="updatevalue" value="" class="text-muted">--Select Option--</option>
        </select>
        <span asp-validation-for="FirmwareUpdated" itemid="updateDropdown-error" class="text-danger"></span>
    </div>

    <hr class="mt-4" />

    <div class="form-group m-0 d-flex">
        <input type="submit" value="Add Item" class="ms-auto btn btn-success"/>
        <input type="button" value="Cancel" class="btn btn-outline-secondary ms-3" data-bs-dismiss="modal" />
    </div>
</form>




@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}
