<style>
    .input-file{
        display: block;
    }
</style>
<script>
    $('#fileUpload').on('change', function () {
        var fileName = this.files[0] ? this.files[0].name : "Choose file";
        $('#uploadLabel').html(fileName);
        $('#importButton').prop('disabled', false);
    });

    $(document).ready(function(){
        $('#importButton').prop('disabled', true);
    });
 
</script>

<h5>Import CSV File</h5>

<div class="input-group">
    <div class="text-center text-orange input-file outline-orange p-4 w-100">
        <div>  <i class="fa fa-upload" aria-hidden="true"> </i></div>
        <input type="file" name="fileUpload" id="fileUpload" accept=".csv" hidden />
        <label for="fileUpload" id="uploadLabel" class="text-center">Choose File</label>
    </div>
</div>

<div class="d-flex mt-2 gap-2">
    <button class="ms-auto btn btn-sm bgc-orange outline-orange" id="importButton">
        Import
    </button>
    <button class="btn btn-sm btn-outline-secondary" data-bs-dismiss="modal">
        Cancel
    </button>
</div>