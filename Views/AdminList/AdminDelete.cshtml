@model InventorySystem.Models.User
@{
    Layout = null;
}

<div>
    <h5 class="text-break"><strong>Are you sure you want to remove this user?</strong></h5>
    <hr />
    <div class="row">
        <dl>
            <dt class="col-sm-2 w-auto">
                @Html.DisplayNameFor(model => model.UserId)
            </dt>
            <dd class="col-sm-10 text-break">
                @Html.DisplayFor(model => model.UserId)

            </dd>
            <dt class="col-sm-2 w-auto">
                @Html.DisplayNameFor(model => model.Username)
            </dt>
            <dd class="col-sm-10 text-break">
                @Html.DisplayFor(model => model.Username)

            </dd>
            <dt class="col-sm-2 w-auto">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-10 text-break">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt class="col-sm-2 w-auto">
                @Html.DisplayNameFor(model => model.Password)
            </dt>
            <dd class="col-sm-10 text-break">
                @Html.DisplayFor(model => model.Password)

            </dd>
            <dt class="col-sm-2 w-auto">
                @Html.DisplayNameFor(model => model.DateCreated)
            </dt>
            <dd class="col-sm-10 text-break">
                @Html.DisplayFor(model => model.DateCreated)

            </dd>
        </dl>

    </div>

    <hr class="mt-0" />
    <form asp-action="/AdminList/AdminDelete" method="post" class="mt-4" id="delete-form" onsubmit="return jQueryAjaxPost(this);">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-route-id="@Model.UserId" />
        <input type="submit" value="Remove User" class="btn btn-danger form-control" />
        <input type="button" value="Cancel" class="btn btn-outline-secondary form-control mt-3 close-modalBtn" data-bs-dismiss="modal" />
    </form>
</div>
