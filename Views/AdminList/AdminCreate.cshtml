                        </g>
                    </svg>
                </div>
            </div>
            <input asp-for="Password" type="text" class="form-control password-field user-input" id="password"
                   autocomplete="off"
                   placeholder="Password"
                   required
                   data-val="true"
                   data-val-required="Password field is required!"
                   data-val-minlength="Password must be at least 8 characters long."
                   data-val-minlength-min="8"
                   pattern="\S+" />
            <!--div class="input-group-append">
                <div class="input-group-text">
                    <button type="button" class="btn btn-outline-secondary toggle-password" id="togglePassword">
                        <i class="fa fa-eye" aria-hidden="true" style="font-size: 10px;"></i>
                    </button>
                </div>
            </div-->
        </div>

        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <hr class="mt-4" />
    <div class="form-group mt-4">
        <input type="submit" value="Add User" class="btn btn-success form-control" />
        <input type="button" value="Cancel" class="btn btn-outline-secondary form-control mt-3" data-bs-dismiss="modal" />
    </div>
</form>




@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}
